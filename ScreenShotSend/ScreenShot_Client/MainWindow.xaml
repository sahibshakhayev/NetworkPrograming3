<Window x:Class="ScreenShot_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenShot_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition  Height="5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="Black"  Margin="20"></Border>
        <Image  x:Name="Screenshot"  Margin="20" Grid.Row="0"></Image>
        <Label HorizontalAlignment="Center"  VerticalAlignment="Bottom" Height="25"      Grid.Row="0">__________________________________________________________________________</Label>
        <Button x:Name="GetSCBt" Height="30"  Width="100" Grid.Row="1" Click="GetSCBt_Click_1">Get Screenshot</Button>
    </Grid>
</Window>
